<script>
    hh();
    window.onresize = hh;
    function hh(){
        var w = document.documentElement.clientWidth;
        var rate = 1900 / 550;
        var h = w / rate;
        $('.cont>ul').css('height',h);
    }
    var idx=0;
    var lock = true;
    $('.bt-right').click(function(){
        animate();
    });
    $('.bt-left').click(function(){
        if (!lock){
            return;
        }
        idx--;
        if (idx<0){
            idx = 0;
        }
        $('.cont ul li').eq(idx).fadeIn(500).siblings().fadeOut(500);
        lock = false;
        setTimeout(function(){
            lock = true;
        },1500)
    });
    var timer = setInterval(animate,3000);
    function animate(){
        if (!lock){
            return;
        }
        idx++;
        if (idx>4){
            idx = 0;
        }
        $('.cont ul li').eq(idx).fadeIn(500).siblings().fadeOut(500);
        lock = false;
        setTimeout(function(){
            lock = true;
        },1500)
    }
</script>