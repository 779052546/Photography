<style>
    div.container{
        width: 1004px;
    }
    .top{
        width: 1004px;
        margin:20px auto;
        text-align: center;
    }
    .top img{
        width: 462px;
        height: 45px;
    }
    .center{
        width: 1004px;
        overflow: hidden;
    }
    .center img{
        width: 300px;
        height: 300px;
    }
    .center span{
        float: left;
        display: inline-block;
        width: 502px;
        height: 300px;
        text-align: center;
        position: relative;
    }
    .center span p{
        position: absolute;
        width: 140px;
        height: 60px;
        left: 50%;
        top: 50%;
        margin-left:-60px;
        margin-top:-30px;
        padding:5px;
        background-color: rgba(242,242,242,0.8);
    }
    .center span p a{
        color: #111;
        display: block;
        width: 130px;
        height: 50px;
        text-align:center;
        line-height:50px;
        border:1px solid #000;
        font-size: 18px;
    }
    a:hover{
        text-decoration: none;
    }
    div.bottom{
        padding-top: 40px;
        width: 1004px;
    }


    ul{
        list-style-type:none;
        width: 1004px;
        margin:40px auto;
    }
    li{
        height: 300px;
        width: 300px;
        float: left;
        position: relative;
        margin-top:30px;
        cursor: pointer;
        margin-bottom:120px;
    }
    li>div{
        height: 300px;
        width: 300px;
        background: url('/images/works/ablmty.png') no-repeat;
        margin-left:-16px;
    }
    li img {
        margin-left: 24px;
        margin-top: 23px;
        width: 250px;
        height: 250px;
        border-radius: 50%;
    }
    li p{
        width: 270px;
        height: 76px;
        background: url("/images/enjoy/3.gif") no-repeat bottom center;
        text-align: center;
    }
    li span{
        display: inline-block;
        margin-top:10px;
        font-size:18px;
        width: 140px;
        height: 36px;
        background-color: #f7dcdc;
        color: #6f6e7f;
        line-height:36px;
    }
    li:hover span{
        color: #fff;
        background-color: #666;
    }
</style>
<div class="container">
    <div class="top">
        <img src="/images/the-earth/1.gif" alt="">
    </div>
    <div class="center">
        <span><a href="javascript:;"><img src="/images/enjoy/2.png" class="can1">
            <p>国内线</a></p>
        </span>
        <span><a href="javascript:;"><img src="/images/enjoy/3.png" class="can2">
            <p>国外线</a></p></span>
    </div>
    <div class="bottom">
        <div class="image">
            <img src="/images/the-earth/2.gif" alt="">
        </div>
        <ul>
            {{#each images}}
                <li class="col-xs-4 col-sm-4 col-md-4">
                    <div>
                        <a href=""><img src="{{src}}"></a>
                    </div>
                    <a href=""> <p><span>{{name}}</span></p></a>
                </li>
            {{/each}}
        </ul>
    </div>
</div>
<script src="/js/jquery.min.js"></script>
<script src="/js/velocity.min.js"></script>
<script>
    $('li').each(function(){
        $(this).mouseenter(function(){
            $('li div').eq($(this).index()).velocity({'rotateZ':'-15deg'},500);
        });
        $(this).mouseleave(function(){
            $('li div').eq($(this).index()).velocity({'rotateZ':'0deg'},500);
        });
    })

    change('.can1');
    change('.can2');

    function change(can1){
        $(can1).mouseenter(function(){
            $(this).velocity({'rotateZ':'-15deg'},500);
        });
        $(can1).mouseleave(function(){
            $(this).velocity({'rotateZ':'0deg'},500);
        });
    }

</script>