
<style>
    *{margin:0;padding:0;list-style-type:none;}
    .cont>ul{
        position: relative;
        height: 550px;
        overflow: hidden;
    }
    .cont>ul li{
        position: absolute;
        display: none;
    }
    .cont>ul li.act{
        display: block;
    }
    .cont>ul img{
        width: 100%;
        height: 100%;
    }
    .cont{
        position: relative;
    }
    .bt{
        position: absolute;
        top: 50%;
        z-index:999;
        width: 40px;
        height: 40px;
        background-color: rgba(222,222,222,.6);
        text-align: center;
        font-size: 30px;
        color: #000;
        text-decoration: none;
    }
    a:hover{
        text-decoration: none;
    }
    .bt-left{
        left: 0;
    }
    .bt-right{
        right: 0;
    }
</style>
<div class="cont">
    <ul>
        <li class="act"><img src="/images/index/luun_1.jpg"></li>
        <li><img src="/images/index/luun_2.jpg"></li>
        <li><img src="/images/index/luun_3.jpg"></li>
        <li><img src="/images/index/luun_4.jpg"></li>
        <li><img src="/images/index/luun_5.jpg"></li>
    </ul>
    <a href="javascript:;" class="bt bt-left"><</a>
    <a href="javascript:;" class="bt bt-right">></a>
</div>

<script>
    hh();
    window.onresize = hh;
    function hh(){
        var w = document.documentElement.clientWidth;
        var rate = 1900 / 550;
        var h = w / rate;
        $('.cont>ul').css('height',h);
    }
    var idx=0;
    var lock = true;
    $('.bt-right').click(function(){
        animate();
    });
    $('.bt-left').click(function(){
        if (!lock){
            return;
        }
        idx--;
        if (idx<0){
            idx = 0;
        }
        $('.cont ul li').eq(idx).fadeIn(500).siblings().fadeOut(500);
        lock = false;
        setTimeout(function(){
            lock = true;
        },1500)
    });
    var timer = setInterval(animate,3000);
    function animate(){
        if (!lock){
            return;
        }
        idx++;
        if (idx>4){
            idx = 0;
        }
        $('.cont ul li').eq(idx).fadeIn(500).siblings().fadeOut(500);
        lock = false;
        setTimeout(function(){
            lock = true;
        },1500)
    }
</script>